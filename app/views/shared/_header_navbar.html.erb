<h1 class="page_header"><%= (params[:repository].present?) ? "#{params[:repository]}" : t('application_title') %></h1>

<% unless request.path == advanced_search_path %>
<div class="search">
  <%= render_search_bar  %>
  <%= link_to t('search.advanced.link_text'), advanced_search_path(params), class: 'advanced_search'%>
</div>
<% else %>
<%= link_to t('search.simple.link_text').html_safe, catalog_index_path(params) %>
<% end %>
